# Environment variables template
# Copy this file to .env and fill in the required values

# Database Configuration
DATABASE_URL="file:./dev.db"  # SQLite file path
DB_HOST="localhost"
DB_PORT="3306"
DB_USER="root"
DB_PASSWORD=""

# Authentication
NEXTAUTH_SECRET="your-secret-key"  # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3001"  # Your application URL

# Security
JWT_SECRET="your-jwt-secret"  # Generate with: openssl rand -base64 32
SESSION_SECRET="your-session-secret"  # Generate with: openssl rand -base64 32

# API Configuration
API_BASE_URL="http://localhost:3001/api"

# Feature Flags
NEXT_PUBLIC_FEATURE_EXPERIMENTAL=false
NEXT_PUBLIC_FEATURE_DEBUG_MODE=false

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=""

# Environment
NODE_ENV="development"  # or "production"
NEXTJS_WORKSPACE_ROOT=/Users/lasse/Sites/todo-spectre
